---
layout: assignment
---
<%# Config %>
<% letter = locals[:letter] %>
<%# End %>
<article class="mw45 center mv4 ph1 ph0-ns cf">
  <div class="dn db-ns mv4 h10"></div>
  <%# Config %>
  <% cl = letter.content.length - 1 %>
  <%# End %>
  <% letter.content.each_with_index do |content, c| %>
    <% if content.type === "header" %>
      <p class="ma0 mb4 merriweather i f1_125 fw3 dark-gray lh2"><%= content.header %></p>
      <div class="dn db-ns mv4 h5"></div>
    <% elsif content.type === "text" %>
      <p class="ma0 <% if c === cl - 1 %>mb4<% else %>mb2<% end %> merriweather f1_125 fw3 dark-gray lh2"><%= content.text %></p>
    <% elsif content.type === "footer" %>
      <div class="dn db-ns mv4 h5"></div>
      <p class="ma0 merriweather i f1_125 fw3 dark-gray lh2"><%= content.footer.greeting %></p>
      <p class="ma0 merriweather i f1_125 fw3 dark-gray lh2"><%= content.footer.signature %></p>
    <% end %>
  <% end %>
  <div class="dn db-ns mv4 h10"></div>
</article>
