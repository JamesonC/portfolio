---
layout: index
---
<%# Config %>
<% page = data.journal_home %>
<% journal = [] %>
<% data.journal.each do |id, article| %>
  <% if article.featured %>
    <% journal.push(article) %>
  <% end %>
<% end %>
<%# End %>
<%# Content %>
<main class="mt4 cf">
  <div class="mw45 center mt2-ns ph1 ph2-m ph0-l">
    <h1 class="ma0 mt2 mb1 merriweather f1_125 fw3 dark-gray"><%= page.title %></h1>
    <p class="ma0 mb2 merriweather f1 fw3 space-gray lh1_75"><%= page.description %></p>
    <%# Config %>
    <% ol = journal.length - 1 %>
    <%# End %>
    <% journal.each_with_index do |post, o| %>
      <% if post.card.type === "main" %>
        <a class="js-link shadow-0 translateY-0 duration-0_25 property-all db no-underline <% if o != ol %>mb2<% end %> bg-white" href="/journal/<%= post.title.parameterize %>">
          <picture>
            <img class="db w-100" src="<%= post.card.image["1x"] %>" srcset="<%= post.card.image["1x"] %> 1x, <%= post.card.image["2x"] %> 2x" alt="<%= post.card.image.alt %>">
          </picture>
          <div class="pa2">
            <h1 class="ma0 mb0_5 merriweather f1 fw4 black lh1_75"><%= post.title %></h1>
            <div class="relative h0_75">
              <h3 class="js-title opacity-1 duration-0_25 property-opacity absolute ma0 lato f0_75 fw7 ls0_15 ttu gray"><%= post.category %> <%= post.type %></h3>
              <h3 class="js-title opacity-0 duration-0_25 property-opacity absolute ma0 lato f0_75 fw7 ls0_15 ttu gray"><%= post.card.cta %></h3>
            </div>
          </div>
        </a>
      <% elsif post.card.type === "secondary" %>
        <a class="js-link shadow-0 translateY-0 duration-0_25 property-all db <% if o != ol %>mb2<% end %> no-underline bg-white" href="/journal/<%= post.title.parameterize %>">
          <table class="w-100 collapse">
            <tbody>
              <tr class="dn-ns">
                <td class="w-100 h12 cover bg-center" style="background-image: url('<%= post.card.image["1x"] %>'); background-image: -webkit-image-set (url('<%= post.card.image["1x"] %>') 1x, url('<%= post.card.image["2x"] %>') 2x)"></td>
              </tr>
              <tr>
                <td class="dn dtc-ns tc w-30-m w-25-l h-100 cover bg-center" style="background-image: url('<%= post.card.image["1x"] %>'); background-image: -webkit-image-set (url('<%= post.card.image["1x"] %>') 1x, url('<%= post.card.image["2x"] %>') 2x)"></td>
                <td class="w-100 w-70-m w-75-l pa2">
                  <div class="relative h0_75 mb1">
                    <h3 class="js-title opacity-1 duration-0_25 property-opacity absolute ma0 lato f0_75 fw7 ls0_15 ttu gray">
                      <% if type === "About" %>
                        <%= post.card.subtitle %>
                      <% elsif type === "Case Studies" %>
                        <%= post.type %>
                      <% elsif type === "Journal" %>
                        <%= post.date %>
                      <% end %>
                    </h3>
                    <h3 class="js-title opacity-0 duration-0_25 property-opacity absolute ma0 lato f0_75 fw7 ls0_15 ttu gray"><%= post.card.cta %></h3>
                  </div>
                  <h1 class="ma0 mb0_5 merriweather f1 fw4 dark-gray lh1_75">
                    <% if type === "About" %>
                      <%= post.card.title %>
                    <% else %>
                      <%= post.title %>
                    <% end %>
                  </h1>
                  <p class="ma0 merriweather f1 fw3 dark-gray lh1_75">
                    <% if type === "About" %>
                      <%= post.card.description %>
                    <% else %>
                      <%= post.description %>
                    <% end %>
                  </p>
                </td>
              </tr>
            </tbody>
          </table>
        </a>
      <% elsif post.card.type === "text" %>
        <a class="js-link shadow-0 translateY-0 duration-0_25 property-all db no-underline <% if o != ol %>mb2<% end %> pv2 pl2 pr4 bg-white" href="/journal/<%= post.title.parameterize %>">
          <div class="relative mb1 h0_75">
            <h3 class="js-title opacity-1 duration-0_25 property-opacity absolute ma0 pr1 lato f0_75 fw7 ls0_15 ttu gray">
              <%= post.date %>
            </h3>
            <h3 class="js-title opacity-0 duration-0_25 property-opacity absolute ma0 lato f0_75 fw7 ls0_15 ttu gray"><%= post.card.cta %></h3>
          </div>
          <h1 class="ma0 mb0_5 merriweather f1 fw4 dark-gray"><%= post.title %></h1>
          <p class="ma0 merriweather f1 fw3 dark-gray lh1_75"><%= post.description %></p>
        </a>
      <% end %>
    <% end %>
  </div>
</main>
<%# End %>
